@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.StoreName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
       
