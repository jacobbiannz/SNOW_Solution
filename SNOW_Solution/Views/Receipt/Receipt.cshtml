@model Snow.Web.ViewModels.ReceiptVM

@{
    ViewBag.Title = "Receipt";
}

<h2>Receipt</h2>

<div>
    <hr />
   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PaymentType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaymentType)
        </dd>
    </dl>
</div>
@foreach (var detailVM in Model.orderVM.AllOrderDetailsVM)
{
    <div>
        <table>
            <tr>
                <td>@detailVM.ProductName</td>
                <td>@detailVM.Price</td>
            </tr>
        </table>
    </div>
}

@Html.ActionLink("Print", "PrintInvoice", "Receipt", @Model, null)

